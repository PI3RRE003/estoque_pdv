<% content_for :title, "Editar Produto" %>

<div class="max-w-3xl mx-auto py-10">
  <div class="flex items-center gap-4 mb-8">
    <%= link_to products_path, class: "p-3 bg-zinc-900 border border-zinc-800 rounded-2xl text-zinc-500 hover:text-white hover:border-orange-500 transition-all" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-4xl font-black text-white italic tracking-tighter uppercase">Editar <span class="text-orange-500">Produto</span></h1>
      <p class="text-zinc-500 text-xs font-bold uppercase tracking-widest mt-1">Atualize as informações do seu inventário</p>
    </div>
  </div>

  <div class="bg-zinc-900 border border-zinc-800 p-8 rounded-[2.5rem] shadow-2xl relative overflow-hidden">
    <%# Detalhe visual de brilho no fundo %>
    <div class="absolute -top-24 -right-24 w-48 h-48 bg-orange-600/10 blur-[80px] rounded-full"></div>

    <%= render "form", product: @product %>

    <div class="mt-8 pt-8 border-t border-zinc-800 flex justify-between items-center">
      <p class="text-[10px] text-zinc-600 font-bold uppercase tracking-widest italic">
        ID do Registro: #<%= @product.id.to_s.rjust(5, '0') %>
      </p>
      
      <%= link_to "VISUALIZAR RECIBO", @product, class: "text-zinc-500 hover:text-white text-[10px] font-black uppercase tracking-widest transition-colors" %>
    </div>
  </div>
</div>