<div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-4">
  <div>
    <h1 class="text-4xl font-black text-white italic tracking-tighter uppercase">Inventário</h1>
    <div class="flex gap-4 mt-2">
      <%= link_to "ATIVOS", products_path, class: "px-4 py-1.5 rounded-lg text-[10px] font-black tracking-widest transition-all #{params[:status] != 'inativo' ? 'bg-orange-600 text-white shadow-[0_0_15px_rgba(234,88,12,0.3)]' : 'bg-zinc-800 text-zinc-500 hover:text-white'}" %>
      <%= link_to "INATIVOS", products_path(status: "inativo"), class: "px-4 py-1.5 rounded-lg text-[10px] font-black tracking-widest transition-all #{params[:status] == 'inativo' ? 'bg-red-600 text-white shadow-[0_0_15px_rgba(220,38,38,0.3)]' : 'bg-zinc-800 text-zinc-500 hover:text-white'}" %>
    </div>
  </div>
  <%= link_to ' Novo Produto', new_product_path, class: "bg-orange-600 hover:bg-orange-500 text-white font-bold py-3 px-6 rounded-xl transition-all shadow-[0_0_20px_rgba(234,88,12,0.3)] uppercase text-xs italic" %>
</div>

<div class="mb-8 group">
  <%= form_with url: products_path, method: :get, class: "relative" do |f| %>
    <%= f.hidden_field :status, value: params[:status] %>
    <div class="absolute left-4 top-1/2 -translate-y-1/2 text-zinc-600 group-focus-within:text-orange-500 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>
    
    <%= f.text_field :query, 
        value: params[:query], 
        placeholder: "Pesquisar por nome ou bipar código de barras...", 
        class: "w-full bg-zinc-900 border-2 border-zinc-800 text-white rounded-2xl pl-12 pr-4 py-4 focus:ring-0 focus:border-orange-600 transition-all outline-none placeholder:text-zinc-700 font-medium" %>

    <% if params[:query].present? %>
      <%= link_to "LIMPAR", products_path(status: params[:status]), class: "absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-black text-zinc-600 hover:text-white transition-colors tracking-widest" %>
    <% end %>
  <% end %>
</div>

<div class="bg-zinc-900 border border-zinc-800 rounded-2xl overflow-hidden shadow-2xl">
  <table class="w-full text-left border-separate border-spacing-y-2 p-2">
    <thead>
      <tr class="text-zinc-500 text-[10px] font-bold uppercase tracking-widest">
        <th class="px-4 py-2">Produto</th>
        <th class="px-4 py-2 text-center">Estoque</th>
        <th class="px-4 py-2 text-right">Preço</th>
        <th class="px-4 py-2 text-right w-32">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr class="bg-zinc-900/50 border border-zinc-800 hover:bg-zinc-800/50 transition-all">
          <%# NOME COM TRUNCATE PARA NÃO QUEBRAR O LAYOUT %>
          <td class="px-4 py-4 rounded-l-2xl max-w-[200px] md:max-w-[300px]">
            <div class="font-bold text-white truncate" title="<%= product.name %>">
              <%= product.name %>
            </div>
          </td>        
          
          <td class="px-4 py-4 text-center font-mono">
            <span class="<%= product.stock_quantity.to_i < 10 ? 'text-orange-500' : 'text-zinc-400' %>">
              <%= product.stock_quantity %>
            </span>
          </td>

          <td class="px-4 py-4 text-right font-bold text-white whitespace-nowrap">
            <%# Usei .price pois é o campo que existe no seu banco %>
            <%= number_to_currency(product.price) %>
          </td>

          <%# BOTÕES COM LARGURA FIXA %>
          <td class="px-4 py-4 text-right rounded-r-2xl whitespace-nowrap min-w-[120px]">
            <div class="flex justify-end gap-2">
              <%= link_to edit_product_path(product), class: "p-2 hover:bg-orange-500/10 text-zinc-500 hover:text-orange-500 rounded-xl transition-all" do %>
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                 </svg>
              <% end %>
              
              <%= button_to product_path(product), method: :delete, form: { data: { turbo_confirm: "Deseja remover este produto?" } }, class: "p-2 hover:bg-red-500/10 text-zinc-500 hover:text-red-500 rounded-xl transition-all" do %>
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                 </svg>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @products.empty? %>
    <div class="p-20 text-center">
      <p class="text-zinc-600 italic">Nenhum produto <%= params[:status] == 'inativo' ? 'inativo' : 'ativo' %> encontrado.</p>
    </div>
  <% end %>
</div>