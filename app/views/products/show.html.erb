<% content_for :title, "Detalhes do Produto" %>

<div class="max-w-3xl mx-auto py-10">
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <%= link_to products_path, class: "p-3 bg-zinc-900 border border-zinc-800 rounded-2xl text-zinc-500 hover:text-white hover:border-orange-500 transition-all" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-4xl font-black text-white italic tracking-tighter uppercase">Ficha do <span class="text-orange-500">Produto</span></h1>
      </div>
    </div>

    <div class="flex gap-3">
      <%= link_to edit_product_path(@product), class: "bg-zinc-800 hover:bg-orange-600 text-white px-6 py-3 rounded-xl font-bold text-xs transition-all uppercase tracking-widest" do %>
        Editar
      <% end %>
    </div>
  </div>

  <div class="bg-zinc-900 border border-zinc-800 rounded-[2.5rem] shadow-2xl overflow-hidden relative">
    <div class="absolute top-0 right-0 p-8">
      <span class="px-4 py-2 rounded-full text-[10px] font-black uppercase tracking-widest <%= @product.active? ? 'bg-green-500/10 text-green-500 border border-green-500/20' : 'bg-red-500/10 text-red-500 border border-red-500/20' %>">
        <%= @product.active? ? "Ativo no Sistema" : "Inativo" %>
      </span>
    </div>

    <div class="p-10 space-y-8">
      <div>
        <h2 class="text-zinc-500 text-[10px] font-black uppercase tracking-[0.2em] mb-2">Informações Básicas</h2>
        <p class="text-3xl font-bold text-white"><%= @product.name %></p>
        <p class="text-zinc-600 font-mono mt-1 italic"><%= @product.barcode.present? ? "EAN: #{@product.barcode}" : "Sem código de barras" %></p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-zinc-950 p-6 rounded-3xl border border-zinc-800">
          <p class="text-zinc-500 text-[9px] font-black uppercase tracking-widest mb-1">Preço de Venda</p>
          <p class="text-2xl font-black text-green-500"><%= number_to_currency(@product.price) %></p>
        </div>

        <div class="bg-zinc-950 p-6 rounded-3xl border border-zinc-800">
          <p class="text-zinc-500 text-[9px] font-black uppercase tracking-widest mb-1">Custo Unitário</p>
          <p class="text-2xl font-black text-zinc-300"><%= number_to_currency(@product.price_cost) %></p>
        </div>

        <div class="bg-zinc-950 p-6 rounded-3xl border border-zinc-800">
          <p class="text-zinc-500 text-[9px] font-black uppercase tracking-widest mb-1">Em Estoque</p>
          <p class="text-2xl font-black <%= @product.stock_quantity <= 5 ? 'text-red-500' : 'text-orange-500' %>">
            <%= @product.stock_quantity %> <span class="text-xs uppercase">un</span>
          </p>
        </div>
      </div>

      <div class="bg-orange-600/5 border border-orange-500/10 p-6 rounded-3xl">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-orange-500 text-[10px] font-black uppercase tracking-widest">Margem de Lucro por Unidade</p>
            <% lucro = @product.price.to_f - @product.price_cost.to_f %>
            <p class="text-xl font-bold text-white"><%= number_to_currency(lucro) %></p>
          </div>
          <div class="text-right">
            <p class="text-zinc-500 text-[10px] font-black uppercase tracking-widest">Rentabilidade</p>
            <% margem = @product.price_cost.to_f > 0 ? (lucro / @product.price_cost.to_f) * 100 : 0 %>
            <p class="text-xl font-bold text-white"><%= number_to_percentage(margem, precision: 1) %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-zinc-800/30 p-6 flex justify-center border-t border-zinc-800">
      <% if @product.active? %>
        <%= button_to "INATIVAR PRODUTO", @product, method: :delete, 
            class: "text-red-500 hover:text-white hover:bg-red-600 px-6 py-2 rounded-xl text-[10px] font-black transition-all border border-red-500/20 uppercase tracking-widest",
            data: { turbo_confirm: "Isso removerá o produto do PDV, mas manterá o histórico de vendas. Confirmar?" } %>
      <% else %>
        <%= button_to "REATIVAR PRODUTO", product_path(@product, product: { active: true }), method: :patch,
            class: "text-green-500 hover:text-white hover:bg-green-600 px-6 py-2 rounded-xl text-[10px] font-black transition-all border border-green-500/20 uppercase tracking-widest" %>
      <% end %>
    </div>
  </div>
</div>